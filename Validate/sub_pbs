rm -f $1.pbs
echo "#!/bin/tcsh "                                   >  $1.pbs
echo "#PBS -joe  -N  $1"                               >> $1.pbs
#------------------------------------------------------------------
# for AMD/Intel linux [zinc]
echo "#PBS -q myri "                                  >> $1.pbs
#------------------------------------------------------------------
# for SGIs
#echo "#PBS -q low "                                  >> $1.pbs
#------------------------------------------------------------------
# for alpha linux [aluminum/platinum]
#echo "#PBS -q alpha -l pvmem=2000000k"                >> $1.pbs
#
echo "rm $MONDO_SCRATCH/$1*"                          >> $1.pbs
echo "cd $PWD"                                        >> $1.pbs
echo "$MONDO_HOME/Exec/MondoSCF $1.inp $1.out"        >> $1.pbs
echo "rm $MONDO_SCRATCH/$1* "                         >> $1.pbs
echo "./Test $1.out $1.ref"                            >> $1.pbs
chmod u+x $1.pbs
qsub $1.pbs

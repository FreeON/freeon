#
# Set MPI related direcories if you have a parallel release.
# Note, you may need to modify the Includes/CompilerSpecifics
# file to set the MPI includes & libs etc
#
setenv MPI_HOME         /usr/local/lib/mpich-1.2.4_PG_P4
setenv MPI_LIB          $MPI_HOME/lib/
setenv MPI_INC          $MPI_HOME/include
setenv MPI_BIN          $MPI_HOME/bin
setenv GM_LIB           /GM/lib
#
# Set MONDO related enviromental variables 
#
setenv MONDO_PLAT        AMDLinux.PG
#setenv MONDO_PLAT        IntelLinux.PG
#setenv MONDO_PLAT        IntelLinux.NAG
#setenv MONDO_PLAT        AlphaLinux.COMPAQ
#setenv MONDO_PLAT        SGIIrix.MIPS
#setenv MONDO_PLAT        True64.COMPAQ
#setenv MONDO_PLAT        IBMAIX.XLF 

setenv MONDO_HOME     	/home/joeuser/MONDO
setenv MONDO_SCRATCH   	/scratch/joeuser/MondoScratch
setenv MONDO_EXEC      	/usr/local/bin/MondoExec
setenv MONDO_LIB       	/usr/local/lib/MondoLib
setenv MONDO_INC     	$MONDO_HOME/Includes
#
# Set MAKE (use gnumake if your make does not support "make -C")
#
setenv MAKE make
#setenv MAKE /usr/local/bin/gnumake
#
# Set up MONDO 
#
source $MONDO_HOME/Scripts/MondoSetUp
#
# Set HDF5 related direcories 
#
# Obtain the HDF5 libraries from http://hdf.ncsa.uiuc.edu/
#
setenv HDF_HOME       /usr/local/lib/hdf5
setenv HDF_BIN         $HDF_HOME/bin
setenv HDF_INC         $HDF_HOME/include
setenv HDF_LIB         $HDF_HOME/lib
setenv LD_LIBRARY_PATH $HDF_LIB
setenv LD_RUN_PATH     $HDF_LIB

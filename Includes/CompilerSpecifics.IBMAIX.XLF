#---------------------------------------------------------------
# PREPROCESSOR OPTIONS: 
#
CPP=/usr/ccs/lib/cpp -P -C
CPPINCLUDE=-I$(MONDO_INC) -I$(HDF_INC) -I/usr/local/include
#
# PREPROCESSING OPTIONS: 
CPPOPTS   = -DPOINTERS_IN_DERIVED_TYPES  -DPERIODIC
#           -DPARALLEL 
#---------------------------------------------------------------
# C Compiler and options
#
CC=xlc
COPTIMIZE = -O2
CFLAGS = $(CMISC) $(COPTIMIZE) $(CDEBUG) $(CPPOPTS)
#---------------------------------------------------------------
# Fortran postfixes for compiler peculiarities
#
LIST_POSTFIX  = lst
F77_POSTFIX   = f
F90_POSTFIX   = f
MOD_POSTFIX   = mod
#---------------------------------------------------------------
# Fortran Compilers, options and include files
#
F90 = xlf95
#
F90_OPTIMIZE = -O3 #-qcache=auto -qarch=auto -qtune=auto
#
#F90_DEBUG =  -qcheck -qdbg -qtbtable=full -qfullpath -qflag=I 
#
F_LIST        = -qlist -qsource 
#
#F_PROF        = 
#
F90_MISC     = $(F_LIST) $(F_PROF) -qnoescape  -qlanglvl=95pure
# 
F77_EXTRAS    =  -qfixed -qsave -qnozerosize -qalias=intptr -qposition=appendol 
#  -qxlf77=intarg:intxor:persistent:noleadzero:gedit77:noblankpad:oldboz:softeof
#
F90_INCLUDE  = -I$(MONDO_HOME)/Includes/               \
               -I$(MONDO_HOME)/MondoMods               \
               -I/usr/local/include                    \
#              -I$(MPI_INC) 
#
F90_FLAGS   = $(F90_MISC) $(F90_OPTIMIZE) $(F90_DEBUG) $(F90_INCLUDE)
#
#---------------------------------------------------------------
# LINK/LOADER DIRECTIVES
#
LD      = $(F90)
#
LDMISC  = -berok -qextchk #-bnoquiet 
#
LDFLAGS = -bmaxdata:1720000000 $(LDMISC) -o
#---------------------------------------------------------------
# LIBRARY ARCHIVAL
#
AR = ar
ARFLAGS = -rcv
RANLIB = ranlib
#---------------------------------------------------------------
# DIRECTORIES TO SUSS FOR LIBRARIES
#
LibOpts=-L$(MONDO_HOME)/Libs -L/usr/local/lib -L$(HDF_LIB) 
#       -L$(LAPACK_LIB)
#       -L$(MPI_LIB) 
#
#MPI_LIBS=-lmpi
#
HDF_LIBS=-lhdf5 -ljpeg -lz 
#
F90_LIBRARIES = -lMondoMods $(MPI_LIBS) $(HDF_LIBS) 
#
LAPACK = -llapack -lblas
#----------------------------------------------------------------------------
#---------------------------------------------------------------
# Preprocessor
#
CPP       =/lib/cpp -P -C
CPPINCLUDE=-I$(MONDO_INC) -I$(HDF_INC) -I/usr/local/include
CPPOPTS   =-DPOINTERS_IN_DERIVED_TYPES
#           -DPARALLEL 
#---------------------------------------------------------------
# C Compiler and options
#
CC        =cc
COPTIMIZE = -O3
CMISC     = -mips4 -64
#CDEBUG    = -g3 -C -fullwarn
CFLAGS    = $(CMISC) $(COPTIMIZE) $(CDEBUG) $(CPPOPTS)
#---------------------------------------------------------------
# Fortran postfixes for compiler peculiarities
#
LIST_POSTFIX  = L
F77_POSTFIX   = f
F90_POSTFIX   = f90
MOD_POSTFIX   = MOD
#---------------------------------------------------------------
# Fortran Compilers, options and include files
#
F90          = f90
#
F90_OPTIMIZE = -O3
#
#F90_DEBUG    = -g3 -DEBUG:subscript_check=ON,verbose_runtime=ON,trap_uninitialized=ON -trapuv
#
F_LIST       = -listing 
#
#F_PROF       = -g3
#
F90_MISC     = $(F_LIST) $(F_PROF) -mips4 -64 -extend_source
#
F90_INCLUDE  = -I$(MONDO_HOME)/Includes/               \
               -I$(MONDO_HOME)/MondoMods               \
               -I/usr/local/include                    \
               -I$(MONDO_HOME)/MondoMods/MMA/Functions 
#              -I$(MPI_INC) 
#
F90_FLAGS    = $(F90_MISC) $(F90_OPTIMIZE) $(F90_DEBUG) $(F90_INCLUDE)
#---------------------------------------------------------------
# LINK/LOADER DIRECTIVES
#
LD =$(F90)
#
LDMISC      = $(F_PROF) -v -mips4 -64 
#
LDFLAGS     = $(LDMISC) -o 
#
#---------------------------------------------------------------
# ARCHIVE  
#
AR      = ar
ARFLAGS = -lruvs
RANLIB  = /bin/true
#---------------------------------------------------------------
# LIBRARY DEFINITIONS
#
# Where the libraries are 
#
LibOpts = -L$(MONDO_HOME)/Libs -L$(HDF_LIB) -L/usr/local/lib 
#         -L$(MPI_LIB) 
#         -L$(LAPACK_LIB)
#         -L$(PAL_ROOT)/lib64 
#-------------------------------------------------------------------------------------
#  VAMPIR LIBRARY
#
#VAMP=-lVT
#-------------------------------------------------------------------------------------
#  MPI Library
#
MPI=$(VAMP) -lmpi
#-------------------------------------------------------------------------------------
#  HDF5 Libraries with compression and jpeg libs:
#  How HDF5 was configured for production:
#  setenv CC "cc -64"
#  ./configure --prefix=$HDF_HOME --enable-production --disable-debug
#  How HDF5 was configured for debuging:
#  setenv CC "cc -g -64"
#  ./configure --prefix=$HDF_HOME --disable-production
#  could go with either: --disable-static --disable-shared
HDF_LIBS=-lhdf5 -lz
#-------------------------------------------------------------------------------------
#  The generic libs needed by most of the programs. 
#
F90_LIBRARIES = -lMondoMods $(MPI_LIBS) $(HDF_LIBS) 
#
#--------------------------------------------------------------------------
#  'Nuff said
#
#LAPACK = -lcomplib.sgimath -lftn  
LAPACK = -lscs -lftn 
#LAPACK = -llapack -lblas $(F77Libs) 
#
#---------------------------------------------------------------------------

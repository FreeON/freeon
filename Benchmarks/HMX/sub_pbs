rm -f $1.pbs
echo "#!/bin/tcsh "                                   >  $1.pbs
echo "#PBS -joe -N m[$1]"                             >> $1.pbs
#----------------------------------------------------------------
# on zinc
echo "#PBS -q myri "                                  >> $1.pbs
# on alphas
#echo "#PBS -q alpha -l pvmem=2000000k"                >> $1.pbs
# on sgis
#echo "#PBS -q low"                                    >> $1.pbs
#----------------------------------------------------------------
echo "tcsh"                                           >> $1.pbs
echo "rm $MONDO_SCRATCH/$1*"                          >> $1.pbs
echo "cd $PWD"                                        >> $1.pbs
echo "$MONDO_HOME/Exec/MondoSCF $1.inp $1.out"        >> $1.pbs
echo "rm $MONDO_SCRATCH/$1* "                         >> $1.pbs
chmod u+x $1.pbs
qsub $1.pbs

rm -f $1.lsf
echo "#!/bin/tcsh "                                   >  $1.lsf
echo "#BSUB -L /bin/tcsh "                            >> $1.lsf
echo "#BSUB -n 32 -q dedicated -W 12:0 "              >> $1.lsf
echo "#BSUB -o out.$1 -J MondoSCF_$1"                 >> $1.lsf
echo "rm $MONDO_SCRATCH/$1*"                          >> $1.lsf
echo "cd `pwd`"                                       >> $1.lsf
echo "$MONDO_HOME/Exec/MondoSCF $1"                   >> $1.lsf
echo "cp $MONDO_SCRATCH/$1*.SCALING_RESULTS `pwd`"    >> $1.lsf
echo "rm $MONDO_SCRATCH/$1* "                         >> $1.lsf
chmod u+x $1.lsf
#bsub  $1.lsf

rm *.in
ls *.in

gunzip XYZ/*

cat template           >  SoftSeg_1.in
cat XYZ/SoftSeg_1.xyz  >> SoftSeg_1.in
cat end                >> SoftSeg_1.in

cat template           >  HardSeg_1.in
cat XYZ/HardSeg_1.xyz  >> HardSeg_1.in
cat end                >> HardSeg_1.in

cat template           >  Estane_1.in
cat XYZ/Estane_1.xyz   >> Estane_1.in
cat end                >> Estane_1.in

cat template           >  Estane_2.in
cat XYZ/Estane_2.xyz   >> Estane_2.in
cat end                >> Estane_2.in

cat template           >  Estane_3.in
cat XYZ/Estane_3.xyz   >> Estane_3.in
cat end                >> Estane_3.in

cat template           >  Estane_4.in
cat XYZ/Estane_4.xyz   >> Estane_4.in
cat end                >> Estane_4.in

cat template           >  Estane_8.in
cat XYZ/Estane_8.xyz   >> Estane_8.in
cat end                >> Estane_8.in

gzip XYZ/*
